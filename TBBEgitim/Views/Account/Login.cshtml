
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
    var siteKey = System.Configuration.ConfigurationManager.AppSettings["RecaptchaSiteKey"];
}

<link rel="stylesheet" href="~/Styles/Account/loginStyle.css" />
<section class="vh-100 gradient-custom d-flex align-items-center">
    <div class="container">
        <div class="login-card card bg-dark text-white rounded-3 shadow-lg">
            <div class="card-body p-5 text-center" style="background-color: #2c3344 ">

                <div class="başlık">
                    <img id="tbb-logo" src="~/Styles/Images/tbb-logo.png" alt="TBB Logo" style="width: 50%" />
                </div>

                <h2 class="fw-bold mb-2 text-uppercase">Giriş Yap</h2>
                <p class="text-white-50 mb-4">Lütfen kullanıcı adı ve şifrenizi giriniz!</p>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="form-outline form-white mb-4">
                        @Html.TextBox("username", null, new { @class = "form-control form-control-lg", type = "text", placeholder = "Kullanıcı Adı" })

                    </div>

                    <div class="form-outline form-white mb-4">
                        @Html.Password("password", null, new { @class = "form-control form-control-lg", placeholder = "Şifre" })

                    </div>

                    <div class="mb-3 d-flex justify-content-center">
                        <div class="g-recaptcha" data-sitekey="@siteKey"></div>
                    </div>

                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Giriş Yap</button>
                }

                @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                {
                    <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                }
                <hr class="my-4" />
            </div>
        </div>
    </div>
</section>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>