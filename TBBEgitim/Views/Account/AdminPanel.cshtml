
@{
    ViewBag.Title = "Kullanıcı Ekle";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link rel="stylesheet" href="~/Styles/Account/adminPanelStyle.css" />
<section class="vh-100 gradient-custom d-flex align-items-center">
    <div class="container">
        <div class="login-card card bg-dark text-white rounded-3 shadow-lg">
            <div class="card-body p-5 text-center" style="background-color: #2c3344 ">

                <h2 class="fw-bold mb-2 text-uppercase">Kullanıcı Ekle</h2>
                <p class="text-white-50 mb-4">Eklenecek kullanıcının kullanıcı adı ve şifresini giriniz!</p>

                @using (Html.BeginForm("AdminPanel", "Account", FormMethod.Post))
                {
                    <div class="form-outline form-white mb-4">
                        @Html.TextBox("username", null, new { @class = "form-control form-control-lg", type = "text", placeholder = "Kullanıcı Adı" })

                    </div>

                    <div class="form-outline form-white mb-4">
                        @Html.Password("password", null, new { @class = "form-control form-control-lg", placeholder = "Şifre" })

                    </div>

                    <button type="submit" class="btn btn-outline-light btn-lg px-5">Ekle</button>
                }


                @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }

                @if (!string.IsNullOrEmpty(ViewBag.Success as string))
                {
                    <div class="alert alert-success mt-3">@ViewBag.Success</div>
                }

                <hr class="my-4" />

                <div>
                    <p class="mb-0">
                        <a href="@Url.Action("Anasayfa", "Giriş")" class="text-white-50 fw-bold">Anasayfaya</a> dönmek için tıklayın.
                    </p>
                </div>

            </div>
        </div>
    </div>
</section>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
